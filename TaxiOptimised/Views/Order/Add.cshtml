@model Order
@{
    ViewBag.Title = "Додати замовлення";
}
<form asp-action="Add" asp-controller="Order">
    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label">Номер телефону замовника</label>
        <input type="text" asp-for="PhoneNumber" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Distance" class="control-label">Відстань до пункту призначення</label>
        <input type="text" asp-for="Distance" class="form-control"/>
    </div>
    
    <div class="form-group">
        <input type ="submit" value="Зберегти" class="btn btn-outline-dark"/>
    </div>
</form>