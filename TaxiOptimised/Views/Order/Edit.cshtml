@model Order
@{
    ViewBag.Title = "Редагування замовлення";
}
<form asp-action="Edit" asp-controller="Order" asp-route-id="@Model.OrderId">
    <div class="form-group">
        <label asp-for="OrderId" class="control-label">Номер замовлення у системі</label>
        <input type="text" asp-for="OrderId" value="@Model.OrderId" readonly="true" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label">Номер телефону замовника</label>
        <input type="text" asp-for="PhoneNumber" class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for="Distance" class="control-label">Відстань до пункту призначення</label>
        <input type="text" asp-for="Distance" class="form-control"/>
    </div>

    <div class="form-group">
        <input type ="submit" value="Зберегти" class="btn btn-outline-dark"/>
    </div>
</form>